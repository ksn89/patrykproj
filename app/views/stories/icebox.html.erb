<h1>Icebox</h1>

<%= render 'buttons' %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Story type</th>
    <th>Owner</th>
    <th>Comments</th>
    <th>Tasks</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>

  <% @stories.each do |story| %>
      <% if story.select == 'Icebox' && story.status == 'Unstarted' %>
          <tr>
            <td><%= link_to story.name, edit_project_story_path(story.project, story) %></td>
            <td><%= story.status %></td>
            <td><%= story.story_type %></td>
            <td><%= story.owner %></td>
            <td><%= story.comments.size %></td>
            <td><%= story.tasks.size %></td>
            <td><%= link_to 'x', [story.project, story], method: :delete %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
