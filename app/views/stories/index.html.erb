<h1>Listing stories</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Status</th>
    <th>Description</th>
    <th>Story type</th>
    <th>Owner</th>
    <th>Select</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.project_id %></td>
        <td><%= story.status %></td>
        <td><%= story.description %></td>
        <td><%= story.story_type %></td>
        <td><%= story.owner %></td>
        <td><%= story.select %></td>

        <td><%= link_to 'Show', [story.project, story] %></td>
        <td><%= link_to 'Edit', edit_project_story_path(story.project, story) %></td>
        <td><%= link_to 'Destroy', [story.project, story], method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

