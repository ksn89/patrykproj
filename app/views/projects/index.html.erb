<h1>Dashboard Projects</h1>
<%= button_to "Add new project", new_project_path, :method => "get", class: "btn btn-primary" %>
<div class="row">

  <% @projects.each do |project| %>
      <div class="pull-left" id="pro">
        <div class="well">
          <div class="caption">
            <p><%= link_to project.name, project_path(project), :class => "btn btn-warning" %></p>

            <p>

              <% project.activities.limit(3).order("created_at desc").each do |activity| %>
                  <%= activity.text(owner: activity.owner.email) %>
                <hr>
            <% end %>
            </p>

            <p class="pull-centre">
              <%= link_to "Edit", edit_project_path(project), :class => "btn btn-success" %>
              <%= link_to "Delete", project, method: :delete, data: {confirm: "Are you sure you want to delete #{project.name} ?"}, :class => "btn btn-danger" %>
            </p>
          </div>

        </div>
      </div>


  <% end %>

</div>


<footer class="center"><%= paginate @projects %></footer>







